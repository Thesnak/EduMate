{
  "name": "edumate",
  "version": "1.0.0",
  "description": "EduMate - Your Study Mate Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron . --disable-gpu",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "coursera",
    "course",
    "player",
    "education",
    "Pdf viewer"
  ],
  "author": "Mohamed Mahmoud Ali",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.edu.mate",
    "productName": "EduMate - Your Study Mate Desktop App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "build/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/logo.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/logo.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/logo.png"
    }
  }
}
